QPushButton {
    background-color: #1E1E2F;
    color: #EDEDED;
    font-size: 14px;
    font-weight: 500;
    padding: 10px 24px;
    border-radius: 12px;
    border: 2px solid #6DFDC3;
    min-width: 140px;
    min-height: 36px;
    icon-size: 20px;
}
QPushButton:hover {
    background-color: #2A2A3D;
    border: 2px solid #83FFD1;
}
